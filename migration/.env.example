# WordPress Database Configuration
WP_DB_HOST=localhost
WP_DB_PORT=3306
WP_DB_NAME=wordpress_database_name
WP_DB_USER=wordpress_username
WP_DB_PASS=wordpress_password

# Migration Options
SKIP_EXTRACTION=false
SKIP_TRANSFORMATION=false
SKIP_IMPORT=false
SYNC_DATABASE=true
DRY_RUN=false

# MariaDB Configuration (uses existing .env from apps/api)
# These should already be configured in apps/api/.env:
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=virginia
# DB_USER=virginia
# DB_PASS=your_password